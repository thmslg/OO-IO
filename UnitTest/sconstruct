env = Environment(tools = ['default', 'cxxtest'])

###############################################################
# Build cxxtest
###############################################################
testList =  [
'DelegateBooleanParameter.t.h',
'ObserverSubject.t.h',
'ListenableSampledInput.t.h',
'InvertedListenableSampledInput.t.h',
]

sourceList =  [
'../Sources/ListenerSubject.cpp',
'../Sources/ListenableSampledInput.cpp',
'../Sources/InvertedListenableSampledInput.cpp',
]
env.CxxTest('outputTest/delegaterunner',testList + sourceList, CXXFLAGS='-Wall -W -Wextra')

###############################################################
# Run Tests
##############################################################
env.Command("pouet", None,"./outputTest/delegaterunner")